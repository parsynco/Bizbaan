@using Parsyn.Apps.Company.Data.Models.Entity.Landing
@model ArticleModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Model?.Seo?.Title;
    
}
@section Seo {

    @await Component.InvokeAsync("Seo", new SeoInjectModel()
{
    Seo = Model.Seo
})
}
<div class="content-section default-height other-page">
    <div class="other-pages-title-bar">
        <h2 class="other-pages-title">
            @Model?.Seo?.Title
        </h2>
    </div>
</div>
<div class="content-section other-page-content" style="background-color: transparent;">
    <div class="news-details">
        <div class="news-image">
            <img src="@Model.Image" alt="@Model.Seo.Title" title="@Model.Seo.Title" />
        </div>
        <div class="news-operation">
            <div class="date">@Model.Created_At.ToString("dd MMMM yyyy")</div>
            <div class="comment-count"><i class="fal fa-eye"></i>10</div>
        </div>
    </div>
    @Html.Raw(Model.Description)
