@page "/"

<PageTitle>بیزبان | داشبورد</PageTitle>

<MudGrid>
    <MudItem lg="4" sm="12">
        <MudPaper Elevation="0">
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudChart ChartType="ChartType.Line" id="test1" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%">
                    </MudChart>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudItem>
    <MudItem lg="4" sm="12">
        <MudPaper Elevation="0">
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudChart ChartType="ChartType.Bar" id="Test2" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%"></MudChart>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudItem>
    <MudItem lg="4" sm="12">
        <MudPaper Elevation="0">
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudChart ChartType="ChartType.Pie" InputData="@data" @bind-SelectedIndex="Index" InputLabels="@labels" Width="11.75rem" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudItem>
    <MudItem lg="12" sm="12">
        <MudDataGrid Elevation="0" Items="Data">
            <Columns>
                <PropertyColumn Property="x => x.Id" Title="#" />
                <PropertyColumn Property="x => x.Category" Title="دسته بندی" />
                <PropertyColumn Property="x => x.Title" Title="عنوان" />
                <PropertyColumn Property="x => x.Image" Title="عکس" />
                <PropertyColumn Property="x => x.PublishData" Title="تاریخ خبر" />
            </Columns>
        </MudDataGrid>
    </MudItem>
</MudGrid>
@code
{
    private int Index = -1;
    double[] data = { 77, 25, 20, 5 };
    string[] labels = { "Uranium", "Plutonium", "Thorium", "Caesium", "Technetium", "Promethium",
                        "Polonium", "Astatine", "Radon", "Francium", "Radium", "Actinium", "Protactinium",
                        "Neptunium", "Americium", "Curium", "Berkelium", "Californium", "Einsteinium", "Mudblaznium" };
    private ChartOptions options = new ChartOptions();
    public List<ChartSeries> Series = new List<ChartSeries>()
    {
        new ChartSeries() { Name = "United States", Data = new double[] { 40, 20, 25, 27, 46, 60, 48, 80, 15 } },
        new ChartSeries() { Name = "Germany", Data = new double[] { 19, 24, 35, 13, 28, 15, 13, 16, 31 } },
        new ChartSeries() { Name = "Sweden", Data = new double[] { 8, 6, 11, 13, 4, 16, 10, 16, 18 } },
    };
    public string[] XAxisLabels = { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep" };

    private readonly IEnumerable<DataTableData> Data = [
        new DataTableData(){
            Id = 1,
Category = "Test",
Image = "logo.png",
PublishData = DateTime.Now.ToString("yyyy/MM/dd"),
Title="تست شماره خبر 1"

},


    ];
    private struct DataTableData()
    {
        public int Id { get; set; }
        public string Category { get; set; }
        public string Title { get; set; }
        public string Image { get; set; }
        public string PublishData { get; set; }
    }

}